<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.houseinspect.activity.mainactivity.ChangePasswordActivity">

    <TextView
        style="@style/TextNormal"
        android:text="Old Password"
        android:textColor="@color/blackColor" />

    <EditText
        android:id="@+id/editText_oldPassword"
        style="@style/EditText.ExtraPadding"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:hint="Old Password" />

    <TextView
        android:layout_marginTop="15dp"
        style="@style/TextNormal"
        android:text="New Password"
        android:textColor="@color/blackColor" />

    <EditText
        android:id="@+id/editText_newPassword"
        style="@style/EditText.ExtraPadding"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:hint="New Password" />

    <TextView
        android:layout_marginTop="15dp"
        style="@style/TextNormal"
        android:text="Confirm New Password"
        android:textColor="@color/blackColor" />

    <EditText
        android:id="@+id/editText_newRePassword"
        style="@style/EditText.ExtraPadding"
        android:layout_marginTop="5dp"
        android:inputType="textPassword"
        android:hint="Confirm New Password" />

    <Button
        android:onClick="onChangePassword"
        android:textColor="@color/whiteColor"
        android:layout_marginTop="20dp"
        android:text="Change Password"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
